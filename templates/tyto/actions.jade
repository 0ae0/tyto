.actions
	button.btn.btn-default.additem(title = "add item.", data-action = "additem")
		|add item
	button.btn.btn-default.addcolumn(title = "add column.", data-action = "addcolumn")
		|add column
	a.hide.savetyto(id = 'savetyto')
	a.hide.tytoemail(id = 'tytoemail')
	.btn-group
		button.btn.btn-default.dropdown-toggle(type = "button", data-toggle = "dropdown")
			|more
			span.caret
		ul.dropdown-menu(role = "menu")
			li
				a(title = "export", data-action = "savebarn")
					|export
			li
				a(title = "load", data-action = "loadbarn")
					|load
			li
				a(title = "email", data-action = "emailbarn")
					|email
			li.divider
			li
				a(title = "show help", data-action = "helpbarn")
					|help
			li
				a(title = "show info", data-action = "infobarn")
					|info
