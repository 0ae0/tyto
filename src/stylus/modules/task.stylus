.column.is--adding
  .tyto--task
    &:last-of-type
      transform-origin center center
      animation create .5s

.tyto--task
  margin-bottom 20px
  max-width 100%
  opacity 1
  .tyto--task-description
    width 100%
    outline 0
    transition background-color .25s
    &:focus
      background-color red
