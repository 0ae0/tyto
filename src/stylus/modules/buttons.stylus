button
  border        none
  padding       5px
  margin        10px
  font-size     14px
  outline       0
  box-shadow    0px 2px 4px 0px #000
  border-radius 4px

button:active
  box-shadow    0px 2px 6px 0px #000

button.float
  height        50px
  width         50px
  border-radius 100%
  padding       0
  position      relative
  i
    font-size   24px
    position    absolute
    top         50%
    left        50%
    margin-left -12px
    margin-top  -12px
