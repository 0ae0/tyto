.tyto-edit__details
  h1.tyto-edit__title(contenteditable="true") editing a todo <%= title %>
  p.tyto-edit__description(contenteditable="true") <%= description %>
p <%= columns.length %>

select.tyto-edit__color
  option(value="default") -- Select a color --
  |<% _.forEach(colors, function(color) { %>
  option(value!="<%= color %>") <%= color %>
  |<% }); %>

.tyto-edit__nav
  |<% if (isNew) { %>
  button.tyto-edit__cancel Cancel
  button.tyto-edit__save   Save
  |<% } else { %>
  a.tyto-edit__back(href!="#board/<%= board.id %>") Go back
  |<% } %>
