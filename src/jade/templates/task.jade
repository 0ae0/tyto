include ../mixins/menu.jade

.tyto-task__content
  .tyto-task__header
    i.material-icons.tyto-task__mover.does--fade open_with
    h2.tyto-task__title(contenteditable="true") <%= title %>
    +actionMenu('<%= id %>--menu', 'more_vert', 'tyto-task', 'does--fade')
      li.mdl-menu__item.tyto-task__delete-task Delete
      li.mdl-menu__item.tyto-task__edit-task.tyto-boomer   Edit
  .mdl-card__supporting-text.tyto-task__description(contenteditable="true") <%= description %>
