include ../mixins/menu.jade

.tyto-task__content
  .tyto-task__header.tx--center
    i.material-icons.tyto-task__mover.does--fade(title="Move task") open_with
    h2.tyto-task__title(contenteditable="true", title="Task title") <%= title %>
    +actionMenu('<%= id %>--menu', 'more_vert', 'tyto-task', 'does--fade', 'bottom-right', 'Task options')
      li.mdl-menu__item.tyto-task__delete-task(title="Delete task") Delete
      li.mdl-menu__item.tyto-task__edit-task.tyto-boomer(title="Edit task") Edit
  .mdl-card__supporting-text.tyto-task__description(contenteditable="true", title="Task description") <%= description %>
