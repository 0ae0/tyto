mixin actionMenu(id, icon, className, fades)
  button.mdl-button.mdl-js-button.mdl-button--icon(id!="#{id}", class!="#{className}__menu-btn #{fades}")
    i.material-icons= icon
  ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect(for!="#{id}", class!="#{className}__menu")
    if block
      block
